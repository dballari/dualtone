{
	"title": "Futuristic Dark",
	"version": 2,
	"$schema": "https://schemas.wp.org/wp/6.5/theme.json",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#111",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#FFF",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#00BBCC",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#92B7C4",
					"name": "Accent / Two",
					"slug": "accent-2"
				}
			]
		},
		"custom": {
			"fontWeight": {
				"default": "150",
				"semiBold": "330"
			}
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"css": "border-radius: 0px; background-color: var(--wp--preset--color--contrast);"
			},
			"core/buttons": {
				"css": " & .is-style-dark .wp-block-button__link { background-color: var(--wp--preset--color--base); color: var(--wp--preset--color--contrast); }",
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--base)"
						}
					}
				}
			},
			"core/cover": {
				"css": " & .has-base-color { font-weight: var(--wp--custom--font-weight--semi-bold); }"
			},
			"core/file": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--semi-bold)"
				}
			},
			"core/group": {
				"css": " & .is-style-vborder { gap: 0; border-top: 1px solid var(--wp--preset--color--accent); border-bottom: 1px solid var(--wp--preset--color--accent); padding: var(--wp--preset--spacing--025) 0; } & .has-accent-background-color { font-weight: var(--wp--custom--font-weight--semi-bold); }"
			},
			"core/query-pagination": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--semi-bold);"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--semi-bold);"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "Zen Dots"
				},
				"css": " & a { color: var(--wp--preset--color--contrast); }"
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "Zen Dots"
				}
			}
		},
		"color": {
			"text": "var(--wp--preset--color--accent-2)"
		}
	}
}